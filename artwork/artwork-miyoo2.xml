<?xml version="1.0" encoding="UTF-8"?>
<!--
  Artwork style 2: Screenshot with logo and cover
  - Screenshot shown in the center
  - Game logo at the top
  - Cover art in the bottom right corner
  - Optimized for Miyoo Mini display (250x360)
-->
<artwork>
  <output type="screenshot" width="250" height="360">
    <layer resource="miyoo-bg.png" opacity="100" width="250" height="360"/>
    <layer resource="screenshot" width="250" align="center" valign="middle">
    </layer>
    <layer resource="wheel" mpixels="0.012" width="200" x="10" y="5" align="left">
      <shadow distance="5" softness="5" opacity="70"/>
    </layer>
    <layer resource="cover" height="110" x="-5" y="-5" align="right" valign="bottom">
      <gamebox side="wheel" rotate="90"/>
      <shadow distance="5" softness="5" opacity="70"/>
    </layer>
  </output>
</artwork>
